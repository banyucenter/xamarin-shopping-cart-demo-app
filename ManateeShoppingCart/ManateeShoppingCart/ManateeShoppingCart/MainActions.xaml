<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManateeShoppingCart.MainActions"
             Icon="menuIcon.png"
             Title=" ">
  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="4*"/>
      </Grid.RowDefinitions>

      <StackLayout Grid.Row="0" x:Name="layoutTitle" Orientation="Horizontal" VerticalOptions="FillAndExpand" Padding="10,0,0,0" BackgroundColor="#1ab78d">
        <Label Text="MANATEEWORKS" VerticalTextAlignment="End" Font="22" TextColor="White" HorizontalOptions="FillAndExpand" />
      </StackLayout>
      <StackLayout Grid.Row="1" x:Name="layoutEditLists" Orientation="Horizontal" VerticalOptions="Start" Spacing="8" Padding="10,10,0,0">
        <Image Source="Images/listBulleted36x36.png" Aspect="AspectFit" />
        <Label Text="CREATE LISTS" VerticalTextAlignment="Center" Font="15" HorizontalOptions="FillAndExpand" />
      </StackLayout>

    </Grid>
  </ContentPage.Content>
</ContentPage>